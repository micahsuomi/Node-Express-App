<%- include('../partials/head') %>

<body>

    <%- include('../partials/navbar') %>
    <main>
      <div class="form-container">
​
        <form action="/api/v1.0.0/students" class="add-student__form" method="POST">
          <h3 class="form-title">Add Student</h3>

          <div class="inputs-wrapper">

          <div class="form-group">
            <label for="firstName">First Name</label>
            <br>
            <input
              id="firstName"
              type="text"
              name="firstName"
              placeholder="First name" />
          </div>
          
          <div class="form-group">
            <label for="lastName">Last Name</label>
            <br>
            <input
              id="lastName"
              type="text"
              name="lastName"
              placeholder="Last name" />
          </div>
       
          <div class="form-group">
            <label for="country">Country</label>
            <br>
            <input id="country" type="text" name="country" placeholder="Country" />
          </div>
​
          <div class="form-group">
            <label for="age">Age</label>
            <br>
            <input type="text" id="age" name="age" placeholder="Age" />
          </div>
          
        </div>
​
          <div class="form-group">
            <label for="skills">Skills</label>
            <br>
            <textarea type="text" id="skills" name="skills" cols="120" rows="5"
              value="Skills separated by comma..."></textarea>
​
          </div>
          <div class="form-group">
            <label for="bio">Your bio</label>
            <br>
            <textarea id="bio" name="bio" cols="120" rows="10" placeholder="Bio"></textarea>
​
          </div>
​
​
          <div class="add-student-btn__wrapper">
          <button class="btn" type="submit" id="submit-button">Add</button>
        </div>
        </form>
​
      </div>
    </main>
​
​
  </div>
​<%- include('../partials/footer') %>

</body>
​
</html>