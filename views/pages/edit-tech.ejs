<%- include('../partials/head') %>

<body>

    <%- include('../partials/navbar') %>
    <main>
      <div class="form-container tech-form">
​
        <form action="/techs/api/<%= tech._id %>/edit" class="add-student__form tech-form" method="POST">
          <h3 class="form-title">Edit Tech</h3>

          <div class="form-group">
            <label for="name">Tech Name</label>
            <br>
            <input
              id="name"
              type="text"
              name="name"
              placeholder="Tech name" 
              value="<%= tech.name %>"
              class="tech-input"/>
          </div>
          
          <div class="form-group">
            <label for="type">Type</label>
            <br>
            <select
              id="type"
              type="text"
              name="type"
              value="<%= tech.type %>"
              placeholder="Tech type"
              class="tech-select">
              <option>Front End</option>
              <option>Back End</option>
            </select> 
          </div>

          <div class="form-group">
            <label for="type">Image</label>
            <br>
          <input id="img"
               type="text"
               name="img"
               value="<%= tech.img %>"
               placeholder="insert an image link here (optional)"
               class="tech-input"/>

            </div>
            <div class="form-group">
                <label for="type">Description</label>
                <br>
          <textarea class="description" 
                name="description" 
                placeholder="description"><%= tech.description %></textarea>
          <div>
          
         
          <div class="add-student-btn__wrapper">
          <button class="btn" type="submit" id="submit-button">Update</button>
        </div>
        </form>
​
      </div>
    </main>
​
​
  </div>
​<%- include('../partials/footer') %>

</body>
​
</html>