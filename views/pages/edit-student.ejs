<%- include('../partials/head') %>

<body>

    <%- include('../partials/navbar') %>
    <main>
      <div class="form-container">
        ​
        <form action="/api/v1.0.0/students/api/<%= student._id %>/edit" method="POST" class="add-student__form">
          <h3 class="form-title">Edit Student</h3>

          <div class="inputs-wrapper">
          <div class="form-group">
            <label for="firstName">First Name</label>
            <br>
            <input
              id="firstName"
              type="text"
              name="firstName"
              value="<%= student.firstName %>"
              placeholder="First name" />
​
          </div>
          <div class="form-group">
            <label for="lastName">Last Name</label>
            <br>
            <input
              id="lastName"
              type="text"
              name="lastName"
              value="<%= student.lastName %>"
              placeholder="Last name" />
          </div>

          <div class="form-group">
            <label for="country">Country</label>
            <br>
            <input id="country" 
            type="text" 
            name="country" 
            value="<%= student.country %>"
            placeholder="Country" />
          </div>
​
          <div class="form-group">
            <label for="age">Age</label>
            <br>
            <input 
            type="text" 
            id="age" 
            name="age" 
            value="<%= student.age %>"
            placeholder="Age" />
          </div>
        </div>
​
          <div class="form-group">
            <label for="skills">Skills</label>
            <br>
            <textarea type="text" id="skills" name="skills" cols="120" rows="5"><%= student.skills.join(', ') %></textarea>
          </div>
          <div class="form-group">
            <label for="bio">Your bio</label>
            <br>
            <textarea id="bio" name="bio" cols="120" rows="10" placeholder="Bio"><%= student.bio %></textarea>
​
          </div>
​
​
          <button class="btn" type="submit" id="submit-button">Update</button>
        </form>
​
      </div>
    </main>
​
​
  </div>
​<%- include('../partials/footer') %>

</body>
​
</html>